<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edNotas"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="11dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Digite a nota aqui..."
            android:inputType="number|numberDecimal"/>
    <Button
            android:text="Gravar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGravar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/btMostrar"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Mostrar Notas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMostrar" android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/edNotas" app:layout_constraintStart_toEndOf="@+id/btGravar"/>
</androidx.constraintlayout.widget.ConstraintLayout>